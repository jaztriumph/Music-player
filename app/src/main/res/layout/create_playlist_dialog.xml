<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/windowBackground">

    <EditText
        android:id="@+id/new_playlist_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/cancel_playlist_btn"
        style="@style/DefaultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/add_playlist_btn"
        android:layout_toStartOf="@+id/add_playlist_btn"
        android:clickable="true"
        android:focusable="true"
        android:text="Cancel" />

    <Button
        android:id="@+id/add_playlist_btn"
        style="@style/DefaultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cancel_playlist_btn"
        android:layout_alignBottom="@+id/cancel_playlist_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="Add" />


</RelativeLayout>